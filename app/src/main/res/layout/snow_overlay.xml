<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/snow_overlayout"
    android:background="@color/transparent"
    android:gravity="bottom"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/snow_overlay">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/snow_air"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:src="@drawable/snow_air"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/snow_floor"
            android:src="@drawable/snow_floor"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitXY"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YOU FELL INTO A TRAP!\n YOU ARE FROZEN FOR 10 SECONDS"
            android:visibility="invisible"
            android:textSize="20sp"
            android:id="@+id/fell_into_trap"
            android:textStyle="bold"
            android:shadowColor="@color/white"
            android:shadowRadius="10"
            android:shadowDx="0"
            android:shadowDy="0"/>
    </LinearLayout>
</RelativeLayout>